{
    "name": "codemetry/core",
    "description": "Framework-agnostic Git repository analysis pipeline",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "symfony/process": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Codemetry\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Codemetry\\Core\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
